<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DreamScape.Pages.Player.ItemDescriptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DreamScape.Pages.Player"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ItemDescriptionWindow">

    <!-- Root container with background -->
    <Grid Background="#2A2A2A">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20" Padding="30">
            <!-- Border for the content -->
            <Border BorderBrush="WhiteSmoke" BorderThickness="2" CornerRadius="10" Background="#333333" Padding="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25">
                    <!-- Item Name -->
                    <TextBlock x:Name="itemNameTbl" 
                               FontSize="50" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               TextDecorations="Underline"/>

                    <!-- Rarity -->
                    <TextBlock x:Name="rarityTbl" 
                               FontSize="35" 
                               FontStyle="Italic" 
                               Foreground="LightGoldenrodYellow" 
                               TextAlignment="Center" 
                               Margin="0,10"/>

                    <!-- Item Description -->
                    <TextBlock x:Name="itemDescTbl" 
                               FontSize="28" 
                               Foreground="WhiteSmoke" 
                               TextAlignment="Center" 
                               Margin="0,10"/>

                    <!-- Additional Effects -->
                    <TextBlock x:Name="additionalEffectsTbl" 
                               FontSize="30" 
                               Foreground="PaleTurquoise" 
                               TextAlignment="Center" 
                               Margin="0,10"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
